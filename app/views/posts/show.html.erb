<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @post.user_id %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.user.name %></td>
    <td><%= comment.content %></td>
  </tr>
<% end %>




<%= link_to 'Edit', edit_post_path(@post) %> |
